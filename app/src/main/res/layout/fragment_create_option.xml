<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.custom_category.createOption.CreateOptionFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/option_recyclerview"
                android:scrollbars="vertical"

                />
        <Button
                android:id="@+id/add_create_option_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/auth_button_drawable"
                android:text="Add Options"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16sp"
                />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>