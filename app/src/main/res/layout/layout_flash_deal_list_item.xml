<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"

        >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:layout_gravity="center">

        <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/container1"

                    >
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/flash_title"
                        android:text="Test"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />

                <TextView
                        android:id="@+id/flash_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 juin"
                        android:textColor="@color/grey5"
                        android:textSize="14sp"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                        android:id="@+id/flash_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2%"
                        android:textColor="@color/grey5"
                        android:textSize="14sp"
                        />

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/flash_expanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/ic_baseline_storefront_24"
                            android:layout_gravity="center"/>
                    <TextView
                            android:id="@+id/flash_store_name"
                            android:layout_marginStart="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donghan Overseas Store"
                            android:textSize="14sp"
                            android:layout_gravity="center"

                            />

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/order_store_address_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_outline_location_on_24"/>
                    <TextView
                            android:id="@+id/flash_store_address"
                            android:layout_marginStart="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donghan Overseas Store"
                            android:textSize="14sp"
                            android:layout_gravity="center"

                            />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <ImageView
                android:id="@+id/expand_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_gravity="top"
                />
    </LinearLayout>




    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_background_color"/>


</LinearLayout>