<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        >

<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_selector"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:id="@+id/container1"
                android:layout_margin="10dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/custom_category_name"
                    android:text="The Title of a Blog"
                    android:textColor="#000"
                    android:textSize="19sp"
                    android:layout_weight="1"
                    />

            <ImageButton
                    android:id="@+id/update_custom_category"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_edit_24"
                    android:layout_marginRight="10dp"
                    />

            <ImageButton
                    android:id="@+id/delete_custom_category"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_delete_24"
                    android:layout_marginRight="10dp"
                    />

        </LinearLayout>






</androidx.cardview.widget.CardView>